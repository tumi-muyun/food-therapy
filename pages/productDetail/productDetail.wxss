/* pages/productDetail/productDetail.wxss */
page{
  background: #f5f5f5;
}

.title,.jiage {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.title {
  font-weight: 700;
}
.content {
  color: #666;
  text-indent: 2em;
  text-align: justify;
  background: #fff;
  font-size: 28rpx;
  line-height: 36rpx;
  padding: 20rpx ;
  margin-bottom: 160rpx;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  line-height: 80rpx;
  /* align-items: center; */
  background: #fff;
  display: flex;
  padding: 20rpx;
  font-size: 30rpx;
}
.bottom .img {
  flex: 1;
  text-align: right;
}
.bottom .img image {
  width: 60rpx;
  height: 60rpx;
  padding-right: 20rpx;
  margin-top: 10rpx;
}
.add-shop {
  background: red;
  color: #fff;
  border-radius: 10rpx 0 0 10rpx;
  padding: 0 20rpx;
}
.buy-now {
  background: pink;
  color: #fff;
  border-radius: 0  10rpx  10rpx 0;
  padding: 0 20rpx;
}
