/**index.wxss**/
page {
  background: #f5f5f5;
}
.list {
  display: flex;
  justify-content: space-around;
  background: #fff;
  width: 100%;
  margin-top: 20rpx;
  overflow: hidden;
}
.item{
  width: 100%;
  margin-left: -90px;
  transform: translateX(90px);
  transition: all 0.4s; 
  display: flex;
  padding: 10rpx;
}
.delete{
  width: 90px;
  background: red;
  color: #fff;
  text-align: center;
  /* 动画 */
  transition: all 0.4s;
  transform: translateX(90px);
  display: flex;
  align-items: center;
  justify-content: center; 
}
/* 动画 */
.touch-move .item,.touch-move .delete{
  transform: translateX(0);
}
.circle {
  display: flex;
  padding-right: 10rpx;
  align-items: center;
}
.img {
  padding-right: 20rpx;
}
.img image {
  width: 180rpx;
  height: 180rpx;
}
.info {
  flex: 1;
  position: relative;
}
.title {
  margin-bottom: 10rpx;
}
.desc {
  font-size: 28rpx;
  color: #666;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.bottom {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  font-size: 26rpx;
}
.money {
  color: red;
  margin-right: 40rpx;
}
.sub {
  padding: 4rpx 10rpx;
  border: 1px solid #999;
}
.num {
  margin: 0 10rpx;
}
.add {
  padding: 4rpx 10rpx;
  background: #333;
  color: #fff;
}
.myCart-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
}
.selectedAll{
  flex: 1;
  display: flex;
  align-items: center;
  vertical-align: middle;
  padding-left: 10rpx;
}
.selectedAll icon{
  width: 23px;
  height: 23px;
  margin-right: 6rpx;
}
.heji {
  padding-right: 20rpx;
  font-size: 26rpx;
}
.heji text {
  color: #43bf92;
}
.jiesuan {
  background: #999;
  color: #fff;
  padding: 0 10rpx;
}
.acitveAll{
  background: #43bf92;
}
